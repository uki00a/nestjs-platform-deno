{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "tasks": {
    "check": "deno fmt --check && deno lint",
    "test": "deno test --allow-net --no-check ./test",
    "test:ci": "deno test --allow-net --no-check --frozen-lockfile ./test"
  },
  "imports": {
    "@uki00a/nestjs-platform-oak": "./packages/nestjs-platform-oak/src/index.ts",
    "@nestjs/common": "npm:@nestjs/common@^10.3.9",
    "@nestjs/core": "npm:@nestjs/core@^10.3.9",
    "@oak/oak": "jsr:@oak/oak@^16.1.0"
  },
  "lint": {
    "rules": {
      "include": ["no-console"]
    }
  }
}
