{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "tasks": {
    "upgrade-deps": "rm deno.lock && deno cache 'packages/*/index.ts' test example",
    "check": "deno fmt --check && deno lint && deno check 'packages/**/*.ts'",
    "test": "deno test --allow-net --no-check ./test",
    "test:ci": "deno test --doc --allow-net --frozen-lockfile ./test './**/*.md'"
  },
  "workspace": {
    "members": [
      "./packages/nestjs-platform-oak"
    ]
  },
  "imports": {
    "@nestjs/common": "npm:@nestjs/common@^10.4.1",
    "@nestjs/core": "npm:@nestjs/core@^10.4.1",
    "@oak/oak": "jsr:@oak/oak@^17.0.0"
  },
  "lint": {
    "rules": {
      "include": [
        "no-console"
      ]
    }
  }
}
